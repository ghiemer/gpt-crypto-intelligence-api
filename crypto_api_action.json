{
  "openapi": "3.0.0",
  "info": {
    "title": "GPT Crypto Intelligence API",
    "version": "1.0.0"
  },
  "paths": {
    "/get_price": {
      "get": {
        "summary": "Get current price of a cryptocurrency",
        "parameters": [
          { "name": "coin", "in": "query", "required": true, "schema": { "type": "string" } },
          { "name": "currency", "in": "query", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "Price data" } }
      }
    },
    "/get_news": {
      "get": {
        "summary": "Get latest news for a cryptocurrency",
        "parameters": [
          { "name": "coin", "in": "query", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "News articles" } }
      }
    },
    "/wallet_info": {
      "get": {
        "summary": "Get Ethereum wallet balance",
        "parameters": [
          { "name": "address", "in": "query", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "ETH wallet data" } }
      }
    },
    "/wallet_info_base": {
      "get": {
        "summary": "Get Base wallet balance",
        "parameters": [
          { "name": "address", "in": "query", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "Base wallet data" } }
      }
    },
    "/wallet_info_bsc": {
      "get": {
        "summary": "Get BSC wallet balance",
        "parameters": [
          { "name": "address", "in": "query", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "BSC wallet data" } }
      }
    },
    "/wallet_info_solana": {
      "get": {
        "summary": "Get Solana wallet balance",
        "parameters": [
          { "name": "address", "in": "query", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "Solana wallet data" } }
      }
    },
    "/wallet_info_btc": {
      "get": {
        "summary": "Get Bitcoin wallet balance",
        "parameters": [
          { "name": "address", "in": "query", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "Bitcoin wallet data" } }
      }
    },
    "/wallet_info_xrp": {
      "get": {
        "summary": "Get XRP wallet balance",
        "parameters": [
          { "name": "address", "in": "query", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "XRP wallet data" } }
      }
    },
    "/contract_info": {
      "get": {
        "summary": "Get smart contract verification info",
        "parameters": [
          { "name": "address", "in": "query", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "Smart contract metadata" } }
      }
    },
    "/historical_price": {
      "get": {
        "summary": "Get historical prices of a coin",
        "parameters": [
          { "name": "coin", "in": "query", "required": true, "schema": { "type": "string" } },
          { "name": "currency", "in": "query", "required": false, "schema": { "type": "string" }, "default": "eur" },
          { "name": "days", "in": "query", "required": false, "schema": { "type": "integer" }, "default": 7 }
        ],
        "responses": { "200": { "description": "Historical chart data" } }
      }
    }
  },
  "servers": [
    {
      "url": "https://your-render-url.onrender.com"
    }
  ]
}
